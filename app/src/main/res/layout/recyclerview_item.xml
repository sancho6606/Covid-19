<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativelay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageviewcountryflag"
            android:layout_width="150dp"
            android:layout_height="110dp"></ImageView>


        <LinearLayout
            android:layout_toRightOf="@id/imageviewcountryflag"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/textviewcountryname"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Corona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_below="@id/textviewcountryname"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/textviewcountrycases"
                android:textColor="@color/black"
                android:text="Corona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_below="@id/textviewcountryname"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/textviewcountryrec"
                android:textColor="@color/black"
                android:text="Corona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_below="@id/textviewcountryname"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/textviewcountrydeaths"
                android:textColor="@color/black"
                android:text="Corona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>

</LinearLayout>